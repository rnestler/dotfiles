#!/bin/bash

device=wlp3s0

case $1 in
	worse)
		iwconfig $device frag 256
		iwconfig $device retry 30
		iwconfig $device rts 1
		;;
	bad)
		iwconfig $device frag 1024
		iwconfig $device retry 30
		iwconfig $device rts auto
		;;
	good)
		iwconfig $device frag auto
		iwconfig $device retry 7
		iwconfig $device rts auto
		;;
	*)
		echo "usage $0 [good|bad|worse]"
		;;
esac

