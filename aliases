# git aliases
alias g=git
alias ga="git add"
alias gf="git fetch --all --prune"
alias gpf="git push --force-with-lease"
alias gitc="git commit"
alias gits="git status"
alias gitd="git diff"
alias gita="git add"
alias gitco="git checkout"
alias gitp="git pull --ff-only"
alias gitf="git fetch --all --prune"
alias gitb="git branch"
alias gitl="git log"
alias gitt="git tag -a"
alias gitpn='git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)'
alias gsw='git switch'
alias gba='git branch -a'
alias gsf='git checkout $(git branch -a | fzf)'
alias gdmb='git delete-merged-branches --effort=3'

alias p='playerctl play-pause'

fsize () {
    printf '\e]710;%s\007' "xft:DejaVu Sans Mono for Powerline:size=$1"
}

alias huge="fsize 20"
alias big="fsize 16"
alias small="fsize 11"
alias rab="~/projects/rnestler/reboot-arch-btw/target/debug/reboot-arch-btw"
alias sem="semaphoreci"
alias vim="nvim"
alias docker="sudo docker"
alias docker-compose="sudo docker-compose"

# bundler aliases
alias bi="bundle install"
alias be="bundle exec"
alias ber="bundle exec rspec"
