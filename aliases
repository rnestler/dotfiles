# git aliases
alias gitc="git commit"
alias gits="git status"
alias gitd="git diff"
alias gita="git add"
alias gitco="git checkout"
alias gitp="git pull --ff-only"
alias gitf="git fetch --all --prune"
alias gitb="git branch"
alias gitl="git log"
alias gitt="git tag -a"
alias gitpn='git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)'

alias big="printf '\e]710;%s\007' \"xft:DejaVu Sans Mono for Powerline:size=16\""
alias small="printf '\e]710;%s\007' \"xft:DejaVu Sans Mono for Powerline:size=11\""
